@model IEnumerable<string>
@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script>
        var tmpList = '@Html.Raw(Json.Serialize(Model))';
        var IndexList = JSON.parse(tmpList);


        // parseFloat(IndexList[11]).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')
        $("#col1").text(IndexList[0]);
        $("#col2").text(IndexList[1]);
        $("#col3").text(IndexList[2]);
        $("#col4").text(IndexList[3]);
        $("#col5").text(IndexList[4]);
        $("#col6").text(IndexList[5]);
        $("#col7").text(IndexList[6]);
        $("#col8").text(IndexList[7]);
        $("#col9").text(IndexList[8]);
        $("#col10").text(IndexList[9]);
        $("#col11").text(IndexList[10]);
        $("#col12").text(IndexList[11]);


        $("body").on("click", "a#submitBtn", function () {
            event.preventDefault();

            var form = $("<form>", {
                action: '@Url.Action("Index", "Home")',
                method: "POST"
            }).append($("<input>", {
                "name": "detail",
                "value": IndexList[4] + "&" + IndexList[7] + "&" + IndexList[8] + "&" + IndexList[9] + "&" + IndexList[11] + "&" + $("#col13").val() + "&" + $("#col14").val(),
                "type": 'hidden'
            }));

            form.appendTo("body").submit();
        });
    </script>
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title text-center">Home Page</h2>
        <hr class="my-4">
        <div class="row">
            <div class="col-lg-4">財務狀況評分：</div>
