            <div class="col-lg-4" id="col2"></div>
            <div class="col-lg-4">
                <a href="@Url.Action("Index2", "Home")">Index2</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">信用評等：</div>
            <div class="col-lg-4" id="col3"></div>
            <div class="col-lg-4"></div>
        </div>
        <div class="row">
            <div class="col-lg-4">總分：</div>
            <div class="col-lg-4" id="col4"></div>
            <div class="col-lg-4"></div>
        </div>
        <div class="row">
