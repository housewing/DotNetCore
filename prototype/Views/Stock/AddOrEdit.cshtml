@model prototype.Models.StockInfo

@{
    ViewData["Title"] = "AddOrEdit";
}

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card my-5">
            <div class="card-body">
                <h2 class="card-title text-center">Create Stock</h2>
                <hr class="my-4">
                <form asp-action="AddOrEdit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <input type="hidden" asp-for="StockType" />
                    <input type="hidden" asp-for="Price" />
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label"></label>
                        @if (Model.Id != null)
                        {
                            <input asp-for="Stock" class="form-control" readonly />
                        }
                        else
                        {
                            <input asp-for="Stock" class="form-control" />
                        }
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Num" class="control-label"></label>
                        <input asp-for="Num" class="form-control" />
                        <span asp-validation-for="Num" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                        </div>
                        <div class="form-group col-md-6">
                            <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>